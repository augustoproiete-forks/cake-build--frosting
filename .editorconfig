; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org


root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sln,csproj}]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[*.ps1]
indent_style = space
indent_size = 2
charset = utf-8-bom
end_of_line = crlf

[*.{yml,yaml}]
indent_size = 2
indent_style = space

# Files that need to be crlf eol to work
[tasks.json]
end_of_line = crlf

[*.cs]
indent_style = space
indent_size = 4

[*.cake]
indent_style = space
indent_size = 4

[*.js]
indent_style = tab
indent_size = 2